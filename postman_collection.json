        {
          "name": "Stripe Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "{{stripeSignature}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"evt_test_webhook\",\n  \"type\": \"payment_intent.succeeded\",\n  \"data\": {\n    \"object\": {\n      \"id\": \"pi_123\",\n      \"metadata\": {\n        \"orderId\": \"<order-id>\",\n        \"userId\": \"<user-id>\"\n      }\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payment/webhook",
              "host": ["{{baseUrl}}"],
              "path": ["payment", "webhook"]
            }
          }
        }
